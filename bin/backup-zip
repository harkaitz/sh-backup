##:
#h: Usage: $0 [DIRECTORY...]
#h:
#h: Creates zip backups of directories named `files-BASENAME`. Type
#h: `backup-name -h` and `backup-name -V` for more information.
##:
. backup-name
. hzip
backup_zip() {
    for arg in "$@";do
        if test @"${arg}" = @".";then
            local arg="`pwd`"
        fi
        local a="`basename "${arg}" | sed 's|^\.*||g'`"
        local zip="`backup_name -D -f .zip "files-${a}"`"
        echo " .-- ${arg}" >&2
        echo " '-> ${zip}" >&2
        hzip -f zip -o "${zip}" "${arg}"
        echo "Created: ${zip}" >&2
    done
}
SCRNAME="`basename "$0"`"
if test @"${SCRNAME}" = @"backup-zip";then
    if test -n "$1";then
        backup_zip "$@"
    else
        sed -n 's/^ *#h: \{0,1\}//p' "$0" | sed "s|\\\$0|`basename $0`|g"
        echo ""
        sed -n 's/^ *#l: \{0,2\}//p' "$0"
    fi
fi
